<mujoco model="spacecraft_nd">
  <compiler angle="radian" inertiafromgeom="false"/>
  <option timestep="1e-3" gravity="0 0 0" integrator="implicit"/>

  <default>
    <joint armature="0.0" damping="0.0" stiffness="0"/>
    <geom contype="0" conaffinity="0" friction="0 0 0" rgba="0.8 0.6 0.4 1"/>
    <motor ctrllimited="true" ctrlrange="-10 10"/>
  </default>

  <worldbody>
    <body name="spacecraft">
      <freejoint name="base6dof"/>
      <geom type="cylinder" size="0.001 0.0015" rgba="0.5 0.5 0.5 1"/>
      <inertial pos="0 0 0" mass="1" diaginertia="1 1 1"/> 
      <site name="com" pos="0 0 0" size="0.01" rgba="1 0 0 1"/>
    </body>
    <body name="earth" pos="0 0 0">
      <geom type="sphere" size="1.0" rgba="0.2 0.5 1 1" contype="0" conaffinity="0" friction="0 0 0" density="0"/>
    </body>
    <camera name="fixed_camera" pos="0 0 5" quat="1 0 0 0" fovy="45"/>
    <light name="light1" pos="0 0 5" dir="0 0 -1" diffuse="1 1 1" specular="0.3 0.3 0.3" ambient="0.1 0.1 0.1"/>
  </worldbody>

  <actuator>
    <motor name="F_world_x" joint="base6dof" gear="1 0 0 0 0 0"/>
    <motor name="F_world_y" joint="base6dof" gear="0 1 0 0 0 0"/>
    <motor name="F_world_z" joint="base6dof" gear="0 0 1 0 0 0"/>
    <motor name="M_body_x" joint="base6dof" gear="0 0 0 1 0 0"/>
    <motor name="M_body_y" joint="base6dof" gear="0 0 0 0 1 0"/>
    <motor name="M_body_z" joint="base6dof" gear="0 0 0 0 0 1"/>
<!--     <motor name="F_world_x" joint="base6dof" gear="0 0 0 1 0 0"/>
    <motor name="F_world_y" joint="base6dof" gear="0 0 0 0 1 0"/>
    <motor name="F_world_z" joint="base6dof" gear="0 0 0 0 0 1"/>
    <motor name="M_world_x" joint="base6dof" gear="1 0 0 0 0 0"/>
    <motor name="M_world_y" joint="base6dof" gear="0 1 0 0 0 0"/>
    <motor name="M_world_z" joint="base6dof" gear="0 0 1 0 0 0"/> -->
  </actuator>

  <sensor>
    <framepos   name="r_world"  objtype="body" objname="spacecraft"/>
    <framelinvel name="v_world" objtype="body" objname="spacecraft"/>
    <frameangvel name="w_world" objtype="body" objname="spacecraft"/>
    <framequat  name="q_world"  objtype="body" objname="spacecraft"/>
  </sensor>
</mujoco>
