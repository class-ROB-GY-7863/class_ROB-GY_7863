<mujoco model="simple_pendulum_point_mass">
  <compiler angle="radian" inertiafromgeom="true"/>
  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.001"/>
  <worldbody>
    <light pos="2 2 3" dir="-1 -1 -2"/>
    <body name="pendulum" pos="0 0 0">
      <joint name="hinge" type="hinge" axis="0 1 0" limited="false" damping="0"/>
      <geom name="rod" fromto="0 0 0   0 0 -1.0" mass="1e-6" type="capsule" size="0.01" rgba="0.3 0.6 0.9 1" contype="0" conaffinity="0"/>
      <geom name="bob" type="sphere" pos="0 0 -1.0" size="0.02" mass="1.0" rgba="0.3 0.6 0.9 1" contype="0" conaffinity="0"/>
      <site name="tip" pos="0 0 -1.0" size="0.02" rgba="1 0.3 0.3 1"/>
    </body>
  </worldbody>
  <actuator>
    <motor name="u" joint="hinge" gear="1" ctrlrange="-10 10"/>
  </actuator>
  <sensor>
    <jointpos   name="theta"    joint="hinge"/>
    <jointvel   name="thetadot" joint="hinge"/>
    <actuatorfrc name="tau"      actuator="u"/>
  </sensor>
</mujoco>