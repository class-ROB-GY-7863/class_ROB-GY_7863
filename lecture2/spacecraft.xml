<mujoco model="spacecraft">
  <compiler angle="radian" inertiafromgeom="false"/>
  <option timestep="0.001" gravity="0 0 0" integrator="implicit"/>

  <default>
    <joint armature="1e-6" damping="1e-6" stiffness="1e-6"/>
    <geom contype="0" conaffinity="0" friction="0 0 0" rgba="0.8 0.6 0.4 1"/>
    <motor ctrllimited="true" ctrlrange="-1e5 1e5"/>
  </default>

  <worldbody>
    <!-- Spacecraft root with free 6-DoF -->
    <body name="spacecraft">
      <freejoint name="base6dof"/>

      <geom type="cylinder" size="2.0 3.0" rgba="0.5 0.5 0.5 1"/>
      <inertial pos="0 0 0" mass="1600" diaginertia="7429.33 7429.33 4608"/>

      <!-- convenient site at COM -->
      <site name="com" pos="0 0 0" size="0.01" rgba="1 0 0 1"/>
    </body>

    <!-- Earth visual only -->
    <body name="earth" pos="0 0 0">
      <geom type="sphere" size="6.371e6" rgba="0.2 0.5 1 1" contype="0" conaffinity="0" friction="0 0 0" density="0"/>
    </body>

    <camera name="fixed_camera" pos="0 0 7e6" quat="1 0 0 0" fovy="45"/>
    <light name="light1" pos="0 0 7e6" dir="0 0 -1" diffuse="1 1 1" specular="0.3 0.3 0.3" ambient="0.1 0.1 0.1"/>
  </worldbody>

  <!-- Actuators: map controls to the 6 generalized velocities of the free joint.
       For freejoint, the 6 vels are [wx wy wz vx vy vz] in WORLD frame.
       The 'gear' picks which component we actuate. -->
  <actuator>
    <!-- world linear forces -->
    <motor name="F_world_x" joint="base6dof" gear="0 0 0 1 0 0"/>
    <motor name="F_world_y" joint="base6dof" gear="0 0 0 0 1 0"/>
    <motor name="F_world_z" joint="base6dof" gear="0 0 0 0 0 1"/>

    <!-- world torques -->
    <motor name="M_world_x" joint="base6dof" gear="1 0 0 0 0 0"/>
    <motor name="M_world_y" joint="base6dof" gear="0 1 0 0 0 0"/>
    <motor name="M_world_z" joint="base6dof" gear="0 0 1 0 0 0"/>
  </actuator>

  <!-- (Optional) sensors to help compare with your models -->
  <sensor>
    <framepos  name="r_world"  objtype="body" objname="spacecraft"/>
    <framelinvel name="v_world" objtype="body" objname="spacecraft"/>
    <frameangvel name="w_world" objtype="body" objname="spacecraft"/>
    <framequat name="q_world"  objtype="body" objname="spacecraft"/>
  </sensor>
</mujoco>
